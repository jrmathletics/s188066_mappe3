<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s188066_mappe3.MainActivity" >
    

    <TextView
        android:id="@+id/wallTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/wallText"
        android:textSize="21sp"
        android:textColor="#60AFDC"
    />
    
    <ListView
        android:id="@+id/wallLV"
        android:layout_below="@id/wallTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/backgroundshape"
        android:cacheColorHint="@android:color/transparent"
    />
       <!-- android:layout_centerHorizontal="true" --> 
    
    
    <TextView 
        android:id="@+id/thingTV"
        android:layout_below="@id/wallLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/thingText"
        android:textSize="16sp"
        android:textColor="#60AFDC"
    />
    
    <ListView 
        android:id="@+id/thingLV"
        android:layout_below="@+id/thingTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundshape"
        android:cacheColorHint="@android:color/transparent"
    />
    
    <Button
        android:id="@+id/setChoicesButton"
        android:layout_below="@+id/thingLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setButtonText"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
    />
    
     <Button
        android:id="@id/showShoppingListButton"
        android:layout_below="@+id/setChoicesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/showShoppingListButtonText"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
    />
    
    <!-- android:layout_centerHorizontal="true" -->    

</RelativeLayout>
